<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="15dp"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:background="@drawable/bg_child_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <ImageView
                android:id="@+id/imageFoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ayak_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageFoot"
                android:singleLine="true"
                android:layout_alignStart="@+id/imageFoot"
                android:layout_alignEnd="@+id/imageFoot"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Günün Çocuk İsim Önerisi" />

            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageFoot"
                android:singleLine="true"
                android:layout_alignStart="@+id/imageFoot"
                android:layout_alignEnd="@+id/imageFoot"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Burak" />

            <TextView
                android:id="@+id/child_name_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageFoot"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/imageFoot"
                android:layout_alignEnd="@+id/imageFoot"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:text="Peygamber efendimizin Miracda bindiği at." />

        </LinearLayout>

</androidx.cardview.widget.CardView>