<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_hikmetname">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|end|top">

            <TextView
                android:id="@+id/txtHeaderHikmet"
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Hikmetname"
                android:textColor="#CA9070"/>

            <TextView
                android:id="@+id/txtHikmetText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textAlignment="viewEnd"
                android:maxLength="100"
                android:textStyle="bold"
                android:text="Gönül almaya bak, güçsüzlere hizmet et! Zayıfları, gönlü kırıkları koru."
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="#644635"/>

            <TextView
                android:id="@+id/txtKaynakHikmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:text="Hz.Ali"
                android:textAlignment="center"
                android:textColor="#644635"
                android:textSize="11sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</FrameLayout>