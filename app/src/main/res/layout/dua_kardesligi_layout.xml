<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingVertical="7dp"
    android:paddingHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#26444E"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageDua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/duakardesligi_png" />

                <TextView
                    android:id="@+id/DuaHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageDua"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageDua"
                    android:letterSpacing="0.05"
                    android:text="Dua Kardeşliği"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageDua"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="3dp"
                    android:letterSpacing="0.05"
                    android:text="Bu platform vesilesiyle zor durumda olan kardeşlerinize dua edebilirsiniz. Bu özellik yakındaki güncellemelerde eklenecektir."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/DuaHeader"
                    android:layout_alignTop="@+id/imageDua"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="29dp"
                    android:letterSpacing="0.05"
                    android:text="25 Nisan 2022"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="7dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnHide"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="8sp"
                    android:text="Gösterme"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/dislike"
                    android:drawablePadding="10dp"/>

                <ImageButton
                    android:id="@+id/imagebtnShuffle"
                    android:layout_width="49dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/shuffle" />

                <Button
                    android:id="@+id/btnPrayed"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="8sp"
                    android:text="Dua Ettim"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/prayed"
                    android:drawablePadding="10dp"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>